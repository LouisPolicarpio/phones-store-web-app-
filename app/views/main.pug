doctype html

<!--Fix hamburger responsiveness-->

html(lang="en")
	head
		title Main Page	 
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
		link(rel="stylesheet" href="/css/main.css")
		script(src="https://code.jquery.com/jquery-3.2.1.js")
		script(src="/js/main.js")

	body
		nav(class="navbar navbar-expand-lg ")
			a(class="navbar-brand" href="http://localhost:3000/") SellPhone
			button(class="navbar-toggler" type="button"  data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation")
				span(class="navbar-toggler-icon")

			div(class="collapse navbar-collapse" id="navbarNavDropdown")
				ul(class="navbar-nav")
					li(class="nav-item active")
						input(type="text" id = "searchField" placeholder="Search")
					

					li(class="nav-item select")
						select(class="form-select" id = "filter" aria-label="Default select example")
							
							option(selected value="") All 
							option(value="Samsung") Samsung
							option(value="Apple") Apple
							option(value="HTC") HTC
							option(value="Huawei") Huawei
							option(value="Nokia") Nokia
							option(value="LG") LG
							option(value="Motorola") Motorola
							option(value="Sony") Sony 
							option(value="BlackBerry") BlackBerry

					li(class="nav-item slider" id = "slider")
						label(for="sliderPrice" class="form-label") Price
						input(type="range" class="form-range" min="0" max="1000" oninput="this.nextElementSibling.value = this.value" value="1000" id="sliderPrice")
						<output></output>

					li(class="nav-item")
						button(type="submit" id ="searchBtn") Search

					li(class="nav-item")
						button(type="submit" class = "signInBtn") Sign In
					li(class="nav-item")
						button(type="submit" class="logOutBtn") Log Out

					li(class="nav-item")
						button(type="submit" class="profileBtn") Profile

					li(class="nav-item")
						button(type="submit" class="checkoutBtn") Checkout

		div(class = "homeState")

		div(class = "searchState")

		div(class = "itemState")

			div(class = "itemImage")
			div(class = "itemDetails")
			div(class = "itemReviews")
				div(class = "itemReviewBody")
				div(class = "itemReviewBtn")
					
					button(class="moreReviewsBtn") More Reviews
					button(class="addToCart") Add To Cart
					p(id="cartTotal") Cart Total: 0
			
			div(class = "addReview")
				form(id = "addReviewForm")
					div(class="form-outline mb-4")
						label(class="form-label" for="form2Example1") Type review
						textarea(class="form-control" name = "reviewText" required)

					div(class="form-outline mb-4")
						label( class="form-label") Rating
						//- input(type="range" class="form-range" min="0" max="5" oninput="this.nextElementSibling.value = this.value" value="5" id="sliderRating" name = "sliderRating")
						//- <output>5</output>	
						input(type="number" class="form-control" name="rating" min = "0" max = "5" required)

					input(type="submit")
				

			
		
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
