doctype html

html(lang="en")
    head
        title Login Page	 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/loginPage.css")
        script(src="https://code.jquery.com/jquery-3.2.1.js")
        script(src="/js/loginPage.js")

    body
        nav(class="navbar navbar-expand-lg ")
            a(class="navbar-brand" href="http://localhost:3000/") Sell Phone
            button(class="navbar-toggler" type="button"  data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")



        div(class = "signUpState")
            h2 Sign Up
            form(id = "signUpForm")
                div(class="form-outline mb-4")
                    input(type="firstName" class="form-control" name="firstName")
                    label(class="form-label" for="form2Example1") First Name

                div(class="form-outline mb-4")
                    input(type="lastName" class="form-control" name="lastName")
                    label(class="form-label" for="form2Example1") Last Name

                div(class="form-outline mb-4")
                    input(type="email" class="form-control" name="email")
                    label(class="form-label" for="form2Example1") Email address

                div(class="form-outline mb-4")
                    input(type="password" class="form-control" name="password") 
                    label(class="form-label" for="form2Example2") Password

                div(class="row mb-4")
                    div(class="col d-flex justify-content-center")

                input(type="submit" class ="fp")

                button(type="button" class="btn btn-primary btn-block mb-4 forgotPassword" id ="fp") Forgot Password


                button(type="button" class="btn btn-primary btn-block mb-4 haveAccountLogin" id ="fp") Already have an account? Login

        div(class = "loginState")
            h2 Log In
            form(id = "loginForm")
                div(class="form-outline mb-4")
                    input(type="email" class="form-control" name = "email")
                    label(class="form-label" for="form2Example1") Email address

                div(class="form-outline mb-4")
                    input(type="password" class="form-control" name = "password") 
                    label(class="form-label" for="form2Example2") Password

                div(class="row mb-4")
                    div(class="col d-flex justify-content-center")

                input(type="submit" class ="fp")
                    
                button(type="button" class="btn btn-primary btn-block mb-4 forgotPassword" id ="fp") Forgot Password

                button(type="button" class="btn btn-primary btn-block mb-4 noAccountRegister" id ="fp") Don't have an account? Register Now

                

        div(class = "resetState")
            h2 Reset Password
            form(id = "resetForm")
                div(class="form-outline mb-4")
                    input(type="email" class="form-control" name = "email")
                    label(class="form-label" for="form2Example1") Email address
                    input(type="submit" class ="fp")
            
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")