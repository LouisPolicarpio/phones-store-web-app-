doctype html

html(lang="en")
    head
        title User Page	 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/user.css")
        script(src="https://code.jquery.com/jquery-3.2.1.js")
        script(src="/js/user.js")

    body
        nav(class="navbar navbar-expand-lg ")
            a(class="navbar-brand" href="http://localhost:3000/") Sell Phone
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")

            div(class="collapse navbar-collapse" id="navbarNavDropdown")
                ul(class="navbar-nav")
                    li(class="nav-item")
                        h6(id = "userTitle") User Page
                    li(class="nav-item")
                        button(type="submit" id ="editProfileBtn") Edit Profile
                    li(class="nav-item")
                        button(type="submit" id = "changePasswordBtn") Change Password
                    li(class="nav-item")
                        button(type="submit" id = "manageListingsBtn") Manage Listings
                    li(class="nav-item")
                        button(type="submit" id = "viewCommentsBtn") View Comments

        div(class = "editProfileState")
            form(id = "editProfileForm")
                div(class="form-outline mb-4")
                    label(class="form-label" for="form2Example1") First Name
                    input(type="firstName" class="form-control" name="firstName" id = "firstName")  

                div(class="form-outline mb-4")
                    label(class="form-label" for="form2Example1") Last Name
                    input(type="lastName" class="form-control" name="lastName" id = "lastName")

                div(class="form-outline mb-4")
                    label(class="form-label" for="form2Example1") Email address
                    input(type="email" class="form-control" name="email" id = "email")

                input(type="submit" class = "submitBtn")


        div(class = "changePasswordState")
            form(id = "changePasswordForm")
                div(class="form-outline mb-4")
                    label(class="form-label" for="form2Example1") Enter old password:
                    input(type="password" class="form-control" name = "oldPassword")
                
                div(class="form-outline mb-4")
                    label(class="form-label" for="form2Example1") Enter new password:
                    input(type="password" class="form-control" name = "newPassword")
                    input(type="submit" class = "submitBtn")

        div(class = "manageListingsState")
            button(type="submit" id = "addListing") Add New Listing

            div(class = "newListing")
                form(id = "newListingForm")
                    div(class="form-outline mb-4")
                        input(type="text" class="form-control" name="title" required)
                        label(class="form-label" for="form2Example1") Title

                    div(class="form-outline mb-4")
                        select(class="form-select" id = "filter" aria-label="Default select example" name="brand")
							
                            option(value="Samsung") Samsung
                            option(value="Apple") Apple
                            option(value="HTC") HTC
                            option(value="Huawei") Huawei
                            option(value="Nokia") Nokia
                            option(value="LG") LG
                            option(value="Motorola") Motorola
                            option(value="Sony") Sony 
                            option(value="BlackBerry") BlackBerry
                    
                    <!--image-->
        
                    <!--add decimal to price-->
                    div(class="form-outline mb-4")
                        input(type="number" class="form-control" min="0" name="stock" required)
                        label(class="form-label" for="form2Example1") Available Stock

                    div(class="form-outline mb-4")
                        input(type="number" class="form-control" name="price" required)
                        label(class="form-label" for="form2Example1") Price

                    input(type="submit" class = "submitBtn")

            div(class = "listing")

        div(class = "viewCommentsState")